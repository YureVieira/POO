	public static void main(String[] args) {
		
		//Cria o quadro de funcionarios altomaticamente
		criar_funcionarios();
		
		int escolha_func;
		for (boolean flag_loop = true; flag_loop;) {
			//Escolha do tipo de pessoa
			int escolha1 = menu1();
			
			switch (escolha1) {
			case 1:
				int tipo_func = menuFunc();
				int index = menu_login_funcionario(tipo_func);
				System.out.println("=============Editar animais=============");
				System.out.println("1 -> Adicionar animal");
				System.out.println("2 -> Adicionar animal");
				System.out.println("3 -> Adicionar animal");
				System.out.println("4 -> Adicionar animal");
				flag_loop = false;
				break;
			case 2:
				flag_loop = false;
				break;
			case 3:
				flag_loop = false;
				break;
			case -1: // Continuar no loop ate a entrada ser valida
				flag_loop = true;
				break;
			}
		}
	}

	/********************************************************************************
